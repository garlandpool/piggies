<%= form_for(@host) do |f| %>
  <% if @host.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@host.errors.count, "error") %> prohibited this host from being saved:</h2>

      <ul>
      <% @host.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">



      <div class="field">
        <%= f.label :first %><br>
        <%= f.text_field :first, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :last %><br>
        <%= f.text_field :last, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :street %><br>
        <%= f.text_field :street, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :city %><br>
        <%= f.text_field :city, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :state %><br>
        <%= f.text_field :state, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :zipcode %><br>
        <%= f.number_field :zipcode, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :h_phone %><br>
        <%= f.text_field :h_phone, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :c_phone %><br>
        <%= f.text_field :c_phone, { class: 'form-control' } %>
      </div>
      <div class="field">
        <%= f.label :visible %><br>
        <%= f.check_box :visible %>
      </div>
      <div class="field">
        <%= f.label :user_id %><br>
        <!-- ########################################################### 
        KEY LEARNING POINT:  Learned how to just display text that can't be edited, even though it shows up in the form.###########################################################  -->
        <%= f.object.user_id %>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-primary' %>
        <% if false %>
          <%= f.submit class: 'btn btn-default' %>
        <% end %>
      </div>

    </div>
  </div>
<% end %>


