<div class="container">
   
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-2">
      <div class="field">
        <%= f.label :first %><br />
        <%= f.text_field :first, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="field">
        <%= f.label :last %><br />
        <%= f.text_field :last, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>
  </div>

<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-4">
      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-1">
      <div class="field">
        <%= f.label :state %><br />
        <%= f.text_field :state, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="field">
        <%= f.label :zipcode %><br />
        <%= f.text_field :zipcode, class: 'form-control', autofocus: true %>
      </div>
    </div>
  </div>

<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-2">
      <div class="field">
        <%= f.label :h_phone %><br />
        <%= f.text_field :h_phone, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="field">
        <%= f.label :c_phone %><br />
        <%= f.text_field :c_phone, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :b_day %><br />
          <span class="form_element">
            <%= f.date_select :b_day, start_year: 1960, input_html: { class: "form-control" } %>
          </span>
      </div>
    </div>
  </div>

<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :contract_date %><br />
        <span class="form_element">
          <%= f.date_select :contract_date, start_year: 1990, input_html: { class: "form-control" } %>
        </span>
      </div>
    </div>

  </div>

<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
  </div>

<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
  </div>
<br/>
<!-- ################################### -->
  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :current_password %> <i>(need current password to confirm changes)</i><br />
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
  </div>
<br/>
<!-- ################################### -->
      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-default' %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default'  %></p>

    <%= link_to "Back", :back, class: 'btn btn-default' %>
  </div>
</div>